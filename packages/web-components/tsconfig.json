{
  "compilerOptions": {
    "target": "es6",
    "plugins": [
      {
        "name": "ts-lit-plugin"
      },
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "development/vite-env.d.ts",
    ".src/types",
    "vite/client"
  ]
}